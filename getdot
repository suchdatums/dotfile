#!/bin/bash -i

function go {
    builtin cd "$@" && ls -gop --human-readable
}

###########################################
echo "getdot  ::>>>>"
repo="dotfile"
url="https://github.com/suchdatums/$repo"
git clone --depth=1 $url
rm -rf ./$repo/.git
mv -f ./$repo/* .
rm -r ./$repo/

mv -f bash_aliases .bash_aliases

chmod +x getdot
go
echo "UPDATED TO VERSION 5.55"
# this file will update itself when ran
# on my god i can't believe this works.
