#!/bin/bash -i

# this file will update itself when ran

repo="dotfile"
url="https://github.com/suchdatums/$repo"
git clone --depth=1 $url
rm -rf ./$repo/.git
mv -f ./$repo/* .
rm -r ./$repo/
mv -f bash_aliases .bash_aliases
chmod +x getdot getrepo
clear
ls -gop --human-readable --sort=extension --group-directories-first --color=auto

echo VERSION 5.5

# if this file is executable, then use '.' instead of 'source'
. .bashrc
