#!/bin/bash -i

if [ -f ./getrepo ]; then
    sudo chattr -i getrepo
fi
repo="dotfile"
url="https://github.com/suchdatums/$repo"
git clone --depth=1 $url
rm -rf ./$repo/.git
mv -f ./$repo/* .
rm -r ./$repo/
# mv won't work if it's a dot file
mv -f bash_aliases .bash_aliases
mv -f *dot .*dot
chmod +x .getdot getrepo
sudo chattr +i getrepo

########
ver=9007
clear
echo
echo "VERSION: <<< $ver >>>"
echo
ls -gop --human-readable --sort=extension --group-directories-first --color=auto
echo -e "\n\nhey... things have changed ... run this command to finish up!!!!!!!!\n\nsource .bashrc"

# BUG
# if this file is executable, then use '.' instead of 'source'
# but it's not working...
#. .bashrc
