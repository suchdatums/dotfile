echo "type "yes" to confirm"
echo "this will copy contents of push over SSH..."
echo "then DELETE contents of push/"
echo -n ": "

read choice

if ["$choice" != "yes" ]
then
	echo "goodbye"
	exit 1
fi

##########################################

rsync --verbose --recursive push/* pi@192.168.4.107:~/


##########################################
if [ $? -eq 0 ]
then
	echo "success"
	echo "press ENTER to continue with rm push/*"
	echo "control-c otherwise"

	read enter
else
	echo "ERROR - QUITING"
	echo "push/ STILL HAS FILES IN IT"

	exit 1
fi

rm push/*
rm -r push/
